<!doctype html>
<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div>
        <h1>Редактирование ЧП</h1>
        <form action= "/edit/emergency"method="POST">
            <input type ="hidden" name="id" value="{{Emergencies.[0].ID}}" />

            <label>Номер поезда</label>
            <input name="TrainID" class ="field" value="{{Emergencies.[0].TrainID}}"><br><br>

            <label>Класс Груза</label>
            <select name="cargoclass">
                {{#with Emergencies.[0]}}
                <option value = "{{'cargoclass.ID'}}">{{'cargoclass.Class'}}</option>        
                {{/with}}
                {{#each Emergencies.[1]}}
                <option value = "{{'ID'}}">{{'Class'}}</option>        
                {{/each}}
            </select><br><br>

            <label>Состояние груза</label>
            <select name="cargostate">
                {{#with Emergencies.[0]}}
                <option value = "{{'cargostate.ID'}}">{{'cargostate.State'}}</option>        
                {{/with}}
                {{#each Emergencies.[2]}}
                <option value = "{{'ID'}}">{{'State'}}</option>        
                {{/each}}
            </select><br><br>

            <label>Пострадавшие</label>
            <select name="casualties">
                {{#with Emergencies.[0]}}
                <option value = "{{'casualty.ID'}}">{{'casualty.State'}}</option>        
                {{/with}}
                {{#each Emergencies.[3]}}
                <option value = "{{'ID'}}">{{'State'}}</option>        
                {{/each}}
            </select><br><br>

            <label>Номер ВП</label>
            <select name="TrainNumber" >
                {{#with Emergencies.[0]}}
                <option value="{{'repairtrainTrainNumber'}}">{{"repairtrainTrainNumber"}}</option>
                {{/with}}
                {{#each Emergencies.[4]}}
                <option value="{{'TrainNumber'}}">{{"TrainNumber"}}</option>
                {{/each}}
            </select><br><br>

            <label>Геопозиция</label>
            <input name="geolocation" class ="field" value="{{Emergencies.[0].Geolocation}}"><br><br>

            <label>Железная дорога</label>
            <select name="railway" >
                {{#with Emergencies.[0]}}
                <option value="{{'railway.ID'}}">{{"railway.Name"}}</option>
                {{/with}}
                {{#each Emergencies.[5]}}
                <option value="{{'ID'}}">{{"Name"}}</option>
                {{/each}}
            </select><br><br>

            <input type="submit" value="Отправить" />
        </form>

        <form action="/emergency" method="GET" style="display:inline;">
            <input type="submit" value="Вернуться" />
        </form>
    </div>
</body>